<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:background">@color/pale_yellow</item>
          <item name="android:actionBarStyle">@style/CustomTealActionBar</item>
          <item name="android:typeface">serif</item>
          <item name="android:buttonStyle">@style/ButtonTheme</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="CustomTealActionBar"
           parent="android:Theme.Holo.Light">
      <item name="android:background">@drawable/teal_background</item>
                <item name="android:typeface">serif</item>
          <item name="android:buttonStyle">@style/ButtonTheme</item>
      <!-- <item name="android:actionMenuTextColor">@color/aqua</item> -->
    </style>
    
    
    
    <!-- button -->
    <style name="ButtonTheme" parent="android:Widget.Button">
        <item name="android:background">@drawable/aqua_btn</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#504552</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>